<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Blogs</title>
  <style>
    body {
      background-color: #212121;
      color: #fff;
      font-family: Arial, sans-serif;
    }

    .container {
      max-width: 1200px;
      margin: 0px auto;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 40px;
      color: #fff;
    }

    .top-links {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .top-links a {
      color: #000;
      width: 20%;
      text-decoration: none;
      font-size: 18px;
      padding: 10px 20px;
      background-color: white;
      border-radius: 5px;
      transition: background-color 0.3s ease;
      text-align: center;
    }

    .top-links a:hover {
      background-color: #000;
      color: white;
    }

    .blog-post {
      display: flex;
      flex-direction: row;
      align-items: flex-start;
      background-color: #171717;
      padding: 20px;
      /* margin-bottom: 30px; */
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    .blog-post img {
      width: 50%;
      height: 300px;
      object-fit: cover;
      border-radius: 10px;
      margin-right: 30px;
    }

    .blog-content {
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .blog-content h2 {
      font-size: 28px;
      color: #fff;
      margin-bottom: 10px;
      margin-top: 0;
    }

    .blog-content p {
      color: #d3d3d3;
      margin-bottom: 15px;
      font-size: 16px;
      line-height: 1.6;
    }

    .blog-content .author {
      font-size: 14px;
      color: #a9a9a9;
      margin-top: auto;
    }

    hr {
      width: 100%;
      margin: 10px 0;
    }

    .comment-section {
      max-width: 1200px;
      margin-bottom: 30px;
      padding: 20px;
      background-color: #282828;
      border-radius: 10px;
    }

    .comment-section h2 {
      font-size: 24px;
      margin-bottom: 15px;
      color: #fff;
    }

    .comment-section h3 {
      font-size: 18px;
      margin-bottom: 10px;
      color: #fff;
    }

    .comment-section textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: none;
      resize: none;
      margin-bottom: 10px;
      background-color: #383838;
      color: #fff;
    }

    .comment-section button {
      padding: 10px 15px;
      background-color: #007bff;
      border: none;
      border-radius: 5px;
      color: white;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .comment-section button:hover {
      background-color: #0056b3;
    }

    .comment-list {
      margin-top: 20px;
    }

    .comment-list p {
      margin-bottom: 10px;
      font-size: 14px;
      color: #d3d3d3;
    }

    .comment-list strong {
      color: #fff;
    }
  </style>
</head>

<body>

  <div class="container">
    <div class="top-links">
      <a href="/dashboard">Back To Dashboard</a>
      <a href="/blogs/add">Add Blog</a>
    </div>
    <h1>All Blogs</h1>

    <% blogs.forEach(blog => { %>
      <div class="blog-post">
        <% if (blog.image) { %>
          <img src="<%= blog.image %>" alt="Blog Image">
        <% } %>
        <div class="blog-content">
          <h2><%= blog.title %></h2>
          <hr />
          <p><%= blog.content %></p>
          <h3 class="author">Author: <%= blog.author.fname %></h3>
        </div>
      </div>
      <div class="comment-section">
        <h2>Comments</h2>
        <h3>Add a Comment</h3>
        <form action="/blogs/<%= blog._id %>" method="POST">
          <textarea name="comment" rows="3" placeholder="Write your comment..." required></textarea>
          <button type="submit">Post Comment</button>
        </form>
   
        <div class="comment-list">
          <% comments.forEach(comment => { %>
            <% if (comment.blogId.toString() === blog._id.toString()) { %> 
              <p><strong><%= comment.user.fname %>:</strong> <%= comment.content %></p>
            <% } %>
          <% }) %>
        </div>

       
      </div>

    <% }) %>
  </div>
</body>

</html>
